style "murrine-scrollbar"
{
	engine "murrine"
	{
		#border_shades     = {.8, .6} #.8 .6
		border_colors     = FALSE
		contrast          = 1.0
		glazestyle        = 1
		glow_shade        = 1.0
		glowstyle         = 0
		highlight_shade   = 1.00
		lightborder_shade = 1.0
		roundness         = 8
	}
	
	bg[NORMAL]   = shade (1.0, @bg_color)
	bg[PRELIGHT] = shade (1.2, @selected_bg_color)
	bg[ACTIVE]   = shade (1.2, @selected_bg_color)
}

